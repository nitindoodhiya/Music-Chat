doctype html
html
  head
    meta(charset='utf-8')
         
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
          
    title albums
          
    link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.min.css')
          
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Cookie')
          
    link(rel='stylesheet', href='/assets/fonts/font-awesome.min.css')
          
    link(rel='stylesheet', href='/assets/css/styles.css')
          
    link(rel='stylesheet', href='/assets/css/Pretty-Header.css')
          
    link(rel='stylesheet', href='/assets/css/Pretty-Footer.css')
    style.
      body div img{
      width: 60%;
      height: 60%;
      }
      body div li{
      list-style-type: none;
      }
  body
    nav.navbar.navbar-default.custom-header
      .container-fluid
        .navbar-header
          a.navbar-brand.navbar-link(href='#')
            li  Companylogo 
                            
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='#navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
                      
        #navbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav.links
            li(role='presentation')
              a(href='/#{userid}/listsongs') YourSongs 
                                  
            li(role='presentation')
              a(href='/#{userid}/showalbums') Albums 
                                  
            li(role='presentation')
              a(href='#')  AllSongs
                                  
            li(role='presentation')
              a(href='/#{userid}/showallalbums') AllAlbums 
                                  
            li(role='presentation')
              a(href='/#{userid}/showusers')  AllUsers
            li(role='presentation')
              a.custom-navbar(href='#') Notification
                 span.badge new
                            
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', href='#')
                span.caret
                img.dropdown-image(src='/assets/img/avatar.jpg')
                                        
              ul.dropdown-menu.dropdown-menu-right(role='menu')
                li.active(role='presentation')
                  a(href='/logout') Logout 
           
    .container
      .col-md-3.col-sm-3.col-sm-3(data-toggle='modal', data-target='#myModal')
        center
          img(src='/assets/img/addalbum.png')
                        
          br
                        
          li Add Album
                
      -for(var i=0;i<albumlist.length;i++)          
        a(href='/#{usersid}/showalbums/#{albumlist[i]._id}').col-md-3.col-sm-3.col-sm-3
          center
            img(src='/assets/img/album.png')
                          
            br
                          
            li=albumlist[i].albumname
               
          
    footer
      .row
        .col-md-4.col-sm-6.footer-navigation
          h3
            a(href='#')
                Company
              span logo 
                            
          p.links
            a(href='#') Home
            strong  &middot; 
            a(href='#') Blog
            strong  &middot; 
            a(href='#') Pricing
            strong  &middot; 
            a(href='#') About
            strong  &middot; 
            a(href='#') Faq
            strong  &middot; 
            a(href='#') Contact
                            
          p.company-name Company Name &copy; 2015 
                      
        .col-md-4.col-sm-6.footer-contacts
          div
            span.fa.fa-map-marker.footer-contacts-icon  
                                  
            p
              span.new-line-span 21 Revolution Street
                 Paris, France
                            
          div
            i.fa.fa-phone.footer-contacts-icon
                                  
            p.footer-center-info.email.text-left  +1 555 123456
                            
          div
            i.fa.fa-envelope.footer-contacts-icon
                                  
            p
              a(href='#', target='_blank') support@company.com
                      
        .clearfix.visible-sm-block
                      
        .col-md-4.footer-about
          h4 About the company
                            
          p
              Lorem ipsum dolor sit amet, consectateur adispicing elit. Fusce euismod convallis velit, eu auctor lacus vehicula sit amet.
                            
          .social-links.social-icons
            a(href='#')
              i.fa.fa-facebook
            a(href='#')
              i.fa.fa-twitter
            a(href='#')
              i.fa.fa-linkedin
            a(href='#')
              i.fa.fa-github
          
    script(src='/assets/js/jquery.min.js')
          
    script(src='/assets/bootstrap/js/bootstrap.min.js')
          
          
    #myModal.modal.fade(role='dialog')
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') &times;&#x9;&#x9;&#x9;&#x9;
                            
            h4.modal-title Create Album
                        
          .modal-body
            center
              form(action="/#{usersid}/createalbum",method="post")
                img(style='width:20%;height:20%', src='https://proxy.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn2.iconfinder.com%2Fdata%2Ficons%2Fmusic-28%2F64%2F_Add_Music_Album-512.png&f=1')              
                br        
                input(type='text', placeholder='AlbumName',name='AlbumName',required)              
                br
                button.btn.btn-default(type='submit') Submit
                        
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
